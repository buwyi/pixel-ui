{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",
    "lib": [
      "ES2023",
      "DOM"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "baseUrl": "./",
    "paths": {
      "@pixel-ui/components": [
        "./packages/components"
      ]
    }
  },
  "include": [
    "packages/**/*",
    "env.d.ts",
    "packages/**/types/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}